---
const { href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  role="link"
  class="inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200
    bg-gray-900 dark:bg-gray-800
    border border-gray-700 dark:border-gray-700
    text-white
    hover:bg-gray-700 dark:hover:bg-gray-700
    hover:border-gray-600
    active:scale-95
    focus:outline-none focus-visible:ring-2 focus-visible:ring-amber-400/60"
>
  <slot />
</a>
