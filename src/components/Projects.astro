---
import { TAGS } from "@/utils/tags";
import GitHub from "@/assets/icons/GitHub.astro";
import Link from "@/assets/icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const PROJECTS = [
  {
    title: "Shopping Cart",
    description:
      "Tienda de productos tecnologicos, construida con React.js, React Router para la navegación, Context API para manejar los datos globales y LocalStorage para persistencia de datos en el navegador.",
    link: "https://shopping-cart-sbg.vercel.app/",
    github: "https://github.com/SebastianBerrios/shopping-cart",
    image: "/images/shopping-cart.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.TYPESCRIPT],
  },
  {
    title: "Pokédex",
    description:
      "Aplicación para explorar Pokémones usando la PokeAPI, construida con React.js, React Router para la navegación y Axios para obtener los datos de la API.",
    link: "https://pokedex-sbg.vercel.app/",
    github: "https://github.com/SebastianBerrios/pokedex",
    image: "/images/pokedex.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.TYPESCRIPT],
  },
  {
    title: "To Do List",
    description:
      "Aplicación de lista de tareas que permite a los usuarios agregar, completar, eliminar y editar tareas. Desarrollado para profundizar en los conceptos claves de React.js",
    link: "https://todo-list-sbg.vercel.app/",
    github: "https://github.com/SebastianBerrios/todo_list",
    image: "/images/to-do-list.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.TYPESCRIPT],
  },
  {
    title: "Recipe Book",
    description:
      "Libro de recetas creado para optimizar la preparación de postres de un emprendimiento llamado Sugary. Desarrollado con HTML, CSS y JavaScript.",
    link: "https://recipebooksugary.vercel.app/",
    github: "https://github.com/SebastianBerrios/recipebook-sugary",
    image: "/images/recipe-book.webp",
    tags: [TAGS.HTML, TAGS.SASS, TAGS.JAVASCRIPT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }, index) => (
      <article class="group flex flex-col gap-8 md:flex-row md:gap-10 md:items-center">
        <!-- Image -->
        <div class="w-full md:w-1/2 flex-shrink-0">
          <div class="relative overflow-hidden rounded-2xl bg-gray-100 dark:bg-gray-900 border border-gray-200/80 dark:border-gray-800 transition-all duration-500 group-hover:border-gray-300 dark:group-hover:border-gray-700 group-hover:shadow-xl dark:group-hover:shadow-black/50">
            <img
              alt={`Captura del proyecto ${title}`}
              class="w-full h-52 sm:h-64 object-cover object-top transition duration-500 group-hover:scale-[1.03]"
              loading="lazy"
              decoding="async"
              src={image}
            />
          </div>
        </div>

        <!-- Content -->
        <div class="w-full md:w-1/2 flex flex-col justify-center">
          <!-- Number -->
          <span class="font-mono text-xs font-bold text-gray-300 dark:text-gray-700 tracking-widest mb-2 select-none">
            {String(index + 1).padStart(2, "0")}
          </span>

          <!-- Title -->
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
            {title}
          </h3>

          <!-- Tags -->
          <ul class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex items-center gap-1.5 rounded-full text-[11px] font-medium ${tag.class} px-2.5 py-1`}
                >
                  <tag.icon class="size-3" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <!-- Description -->
          <p class="text-[0.925rem] text-gray-600 dark:text-gray-400 leading-relaxed mb-5">
            {description}
          </p>

          <!-- Buttons -->
          <div class="flex items-center gap-3">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-4" />
                Código
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Ver proyecto
              </LinkButton>
            )}
          </div>
        </div>
      </article>
    ))
  }
</div>
